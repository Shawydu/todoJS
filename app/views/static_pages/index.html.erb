<section class="todoapp">
  <header class="header">
    <h1>todos</h1>
    <input class="new_todo" placeholder="What needs to be done?" autofocus="">
  </header>

  <section class="main">
	<ul class="todo-list">
		<li>
			<div class="view">
				<input type="checkbox" class="toggle">
				<label>Do laundry</label>
			</div>
		</li>
	</ul>
  </section>
</section>

<script>
	$(function() {
		$.get("/tasks").success(function(data) {
			var htmlString = "";

			$.each(data, function(index, task) {
				var checkedStatus = task.done ? "checked" : "";
				var liElement = '<li><div class="view"><input type="checkbox" class="toggle" ' + checkedStatus + ' /><label>' 
				+ task.title + '</label></div></li>';
				htmlString += liElement;
				
			});
			var ulTodos = $('.todo-list');
			ulTodos.html(htmlString);
		});
	});
</script>